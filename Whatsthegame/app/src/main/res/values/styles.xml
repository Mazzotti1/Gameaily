<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fonteEstilizada">
        <item name="android:fontFamily">@font/hachimarupop_regular</item>
    </style>
    <style name="fonteEstilizadaBold">
        <item name="android:fontFamily">@font/mochiypoppone_regular</item>
    </style>
    <style name="fonteBase">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.WhatsTheGameActivity" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/appBar</item>
        <item name="android:fontFamily">@font/mochiypoppone_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="AppTheme.RankActivity" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/appBar</item>
        <item name="android:fontFamily">@font/mochiypoppone_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@drawable/search_view_bg</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="NavbarIconStyle">
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>





</resources>
