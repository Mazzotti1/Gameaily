<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appBarFragments.rouletteFragment"
    android:background="@color/background">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mochiypoppone_regular"
        android:text="Roleta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rouletteBody"
        app:layout_constraintVertical_bias="0.087" />


    <ImageView
        android:id="@+id/rouletteBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/roulettebody"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <ImageView
        android:id="@+id/rouletteBord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/roulettebord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />


    <Button
        android:id="@+id/rouletteRollButton"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="16sp"
        android:backgroundTint="@color/destaques"
        android:fontFamily="@font/mochiypoppone_regular"
        android:text="Rodar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rouletteBord"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewRolls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:fontFamily="@font/poppins_medium"
        android:text="0 Giros restantes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toEndOf="@id/rouletteRollButton"
        app:layout_constraintTop_toBottomOf="@id/rouletteBord" />

</androidx.constraintlayout.widget.ConstraintLayout>