<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
    tools:context=".accountFragments.LoginFragment"
    >

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/search_view_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmail"/>

    <TextView
        android:id="@+id/textSenha"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Senha"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.296"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"/>

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/search_view_bg"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSenha" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Esqueci minha senha"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.446"
        app:layout_constraintTop_toBottomOf="@id/editTextSenha" />

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mochiypoppone_regular"
        android:text="NÃ£o tenho uma conta ainda "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.813"
        app:layout_constraintTop_toBottomOf="@id/submitLoginButton"/>

    <Button
        android:id="@+id/submitLoginButton"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/primaria"
        android:fontFamily="@font/poppins_medium"
        android:text="Conectar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.561"
        app:layout_constraintTop_toBottomOf="@id/forgotPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/secundaria"
        android:fontFamily="@font/poppins_medium"
        android:text="Registrar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/textRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.918"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>