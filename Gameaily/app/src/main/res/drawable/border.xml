<!-- res/drawable/border_with_margin.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Camada com margem superior -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2px"
                android:color="@color/destaques" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Camada de fundo sem margem -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
